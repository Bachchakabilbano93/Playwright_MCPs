# =================================
# Playwright Framework Environment
# =================================

# Base URLs
BASE_URL=https://app.vwo.com
API_BASE_URL=https://api.vwo.com

# Test Credentials (use different values for CI/CD)
TEST_USERNAME=testuser@example.com
TEST_PASSWORD=testpass123

# Timeouts (milliseconds)
DEFAULT_TIMEOUT=30000
API_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000

# Browser Configuration
HEADLESS=true
SLOW_MO=0
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Logging
LOG_LEVEL=INFO

# Retry Configuration
RETRIES=0

# Artifacts
SCREENSHOT=only-on-failure
VIDEO=retain-on-failure
TRACE=on-first-retry
