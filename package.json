{
    "name": "playwright-framework",
    "version": "1.0.0",
    "description": "Playwright Test Automation Framework by Pramod Dutta - The Testing Academy",
    "author": "Pramod Dutta <pramod@thetestingacademy.com>",
    "license": "MIT",
    "scripts": {
        "test": "npx playwright test",
        "test:headed": "npx playwright test --headed",
        "test:ui": "npx playwright test --ui",
        "test:debug": "npx playwright test --debug",
        "test:chromium": "npx playwright test --project=chromium",
        "test:firefox": "npx playwright test --project=firefox",
        "test:webkit": "npx playwright test --project=webkit",
        "test:p0": "npx playwright test --grep \"@P0\"",
        "test:p1": "npx playwright test --grep \"@P1\"",
        "test:smoke": "npx playwright test --grep \"@Smoke\"",
        "test:regression": "npx playwright test --grep \"@Regression\"",
        "test:login": "npx playwright test --grep \"@Login\"",
        "test:security": "npx playwright test --grep \"@Security\"",
        "report": "npx playwright show-report",
        "codegen": "npx playwright codegen",
        "trace": "npx playwright show-trace"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.0.0",
        "@playwright/test": "^1.50.0",
        "@types/node": "^22.0.0",
        "dotenv": "^16.4.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.0"
    },
    "engines": {
        "node": ">=18"
    },
    "keywords": [
        "playwright",
        "test-automation",
        "page-object-model",
        "e2e-testing",
        "the-testing-academy"
    ]
}